{
  "type": "module",
  "version": "0.5.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-s build:core build:n8n build:mcp",
    "build:core": "pnpm -C packages/strencoderkit build",
    "build:n8n": "pnpm -C packages/n8n build",
    "build:mcp": "pnpm -C packages/mcp build",
    "test": "run-p \"test:*\"",
    "test:core": "pnpm -C packages/strencoderkit test --run",
    "lint": "eslint .",
    "release": "rm \"packages/*/dist\" -rf && bumpp -r --commit \"Release v%s\" && pnpm build"
  },
  "devDependencies": {
    "@ycs77/eslint-config": "catalog:dev",
    "bumpp": "catalog:dev",
    "eslint": "catalog:dev",
    "npm-run-all2": "catalog:dev"
  }
}
